rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the owner of a document by its contents
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to check if a user is the potential owner of a bookmark by its ID
    // This is CRITICAL for allowing a `getDoc` call on a non-existent document.
    // Note: Using matches() with regex since startsWith() is not available in Firestore rules
    function isBookmarkOwner(sketchId) {
      return request.auth != null && sketchId.matches('^bookmark_' + request.auth.uid + '_.*$');
    }

    // Users: Allow public read of profiles, but only owners can write.
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);

      // Transactions subcollection: Users can only read and create their own transactions.
      // They cannot update or delete transactions (for audit trail integrity).
      match /transactions/{transactionId} {
        allow read: if isOwner(userId);
        allow create: if request.auth != null && request.auth.uid == userId 
                      && request.resource.data.userId == userId;
        allow update, delete: if false; // Transactions are immutable for audit purposes
      }
    }

    // Sketches: Covers both original sketches and bookmarks.
    match /sketches/{sketchId} {

      // READ:
      // 1. Allow reading any document that is marked public.
      // 2. Allow reading any document where the user is the owner.
      // 3. Allow a user to check for the existence of their OWN bookmark path, even if it doesn't exist yet.
      allow read: if (resource != null && resource.data.isPublic == true)
                  || (resource != null && isOwner(resource.data.userId))
                  || isBookmarkOwner(sketchId);

      // CREATE: Allow if the user is logged in and is setting their own UID as the owner.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // DELETE: Allow if the user is the owner of the document.
      allow delete: if request.auth != null && isOwner(resource.data.userId);

      // UPDATE: Allow if the user is the owner, OR if they are only incrementing the blessCount.
      allow update: if request.auth != null && (
        // Condition 1: The owner can make any change.
        isOwner(resource.data.userId)
        ||
        // Condition 2 (BLESS): Any user can update *only* the blessCount by exactly 1.
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['blessCount'])
          && request.resource.data.blessCount == resource.data.blessCount + 1
        )
      );
    }

    // Processed Webhooks: Admin SDK only (Cloud Functions bypass rules)
    // Used for idempotency - prevents duplicate webhook processing
    match /processedWebhooks/{eventId} {
      allow read, write: if false;
    }
  }
}
